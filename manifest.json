{
  "name": "LinkedIn Feed Toggle",
  "description": "Deletes the LinkedIn feed on demand.",
  "version": "1.3.0",
  "manifest_version": 3,

  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://www.linkedin.com/*"],

  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Feed Toggle"
  },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
